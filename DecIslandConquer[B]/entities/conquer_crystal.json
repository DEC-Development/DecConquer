        "width": 1,
        "height": 2
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "run_command": {
          "command": [
            "function conquer_crystal/spawn"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:white"
          ]
